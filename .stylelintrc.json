{
	"extends": [
		"stylelint-config-standard",
		"stylelint-config-clean-order",
		"stylelint-config-html/html"
	],
	"rules": {
		"selector-class-pattern": null,
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": "global"
			}
		]
	},
	"overrides": [
		{
			"files": ["*.webc", "**/*.webc"],
			"customSyntax": "postcss-html"
		}
	]
}

{
	"plugins": ["prettier-plugin-astro", "prettier-plugin-svelte"],
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}

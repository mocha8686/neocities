<style>
	.container {
		--cl-base: oklch(70% 0.15 0);
		--cl-r: oklch(from var(--cl-base) l c 18);
		--cl-y: oklch(from var(--cl-base) l c 88);
		--cl-o: oklch(from var(--cl-base) l c 109);
		--cl-g: oklch(from var(--cl-base) l c 148);
		--cl-b: oklch(from var(--cl-base) l c 246);
		--cl-p: oklch(from var(--cl-base) l c 307);

		display: flex;
		gap: 2rem;
		align-items: baseline;
	}

	* {
		white-space: nowrap;
	}

	a {
		text-decoration: none;
	}

	a,
	.middle {
		position: relative;
	}

	.prev::after,
	.next::before,
	.middle::before {
		content: '';

		position: absolute;
		inset-block-end: -4px;
		inset-inline: 0;

		height: 2px;

		background: linear-gradient(
			to right,
			var(--cl-r),
			var(--cl-y),
			var(--cl-o),
			var(--cl-g),
			var(--cl-b),
			var(--cl-p)
		);
	}


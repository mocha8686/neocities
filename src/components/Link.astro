---
import type { HTMLAttributes } from 'astro/types';

const props: HTMLAttributes<'a'> = Astro.props;
---

<a {...props}>
	<slot />
</a>

<style>
	a {
		--border-radius: 2rem;

		cursor: pointer;

		position: relative;

		display: inline-block;

		padding: 0.5rem 2rem;
		border: none;
		border-radius: var(--border-radius);

		font: inherit;
		font-family: var(--ff-accent);
		color: white;
		text-decoration: none;
		text-shadow: var(--cl-accent-dark) 1px 1px 2px;

		background-color: var(--cl-accent);
		background-image: linear-gradient(
			hsl(0deg 0% 0% / 30%) 30%,
			hsl(0deg 0% 100% / 0%) 70%,
			hsl(0deg 0% 100% / 70%)
		);
		box-shadow: 0 6px 5px -2px rgb(0 0 0 / 50%);

		&::after {
			content: '';

			position: absolute;
			inset: 0 calc(var(--border-radius) / 2) 50%;

			border-radius: 0.5rem;

			background: linear-gradient(
				hsl(0deg 0% 100% / 90%),
				hsl(0deg 0% 100% / 10%)
			);
		}

		&:hover {
			filter: brightness(105%);
		}

		&:active {
			filter: brightness(95%);
		}
	}
</style>

---
import { Image } from 'astro:assets';

import pfp from '$src/assets/mizuki.jpg';
import Albums from '$src/components/Albums.astro';
import Chat from '$src/components/Chat.astro';
import NavList from '$src/components/NavList.astro';
import Webrings from '$src/components/Webrings.astro';
import Window from '$src/components/Window.astro';
import MainLayout from '$src/layouts/MainLayout.astro';
---

<MainLayout>
	<h1>Have You Seen This Girl?</h1>

	<section class="about-bio">
		<div class="bio">
			<Window class="quote">
				<h2>Mizuki?</h2>
				<blockquote lang="ja">ごめん…</blockquote>
			</Window>

			<Image
				src={pfp}
				alt="Akiyama Mizuki"
				layout="constrained"
				class="pfp"
				width={200}
				height={200}
			/>
		</div>

		<Window class="about">
			<h2>About</h2>
			<p>welcome to my virtual home~</p>
			<p>
				it's pretty empty in here right now, but feel free to go wandering
				about. who knows, maybe you'll find a secret or two?
			</p>
		</Window>
	</section>

	<section class="info">
		<div class="info-column">
			<NavList />
			<Chat />
		</div>

		<div class="info-column">
			<section class="albums">
				<h2>Albums</h2>
				<Albums />
			</section>

			<Window class="blog-preview">
				<h2>Blog</h2>
				<p>under construction!</p>
			</Window>
		</div>
	</section>

	<Window class="webrings">
		<h2>webrings</h2>
		<Webrings />
	</Window>
</MainLayout>

<style>
	.about-bio {
		display: grid;
		grid-template-columns: minmax(auto, 200px) 1fr;
		gap: 4rem;
		align-items: start;

		@container (width <= 500px) {
			grid-template-columns: 1fr;
			gap: 2rem;
			justify-items: center;
		}
	}

	.bio {
		display: flex;
		flex-direction: column-reverse;
		gap: 1rem;
	}

	.pfp {
		border: 2px solid var(--cl-outline);
	}

	.about {
		row-gap: 1em;
		padding-block-end: 1em;

		p {
			margin: 0;
			line-height: 1.45;
		}
	}

	.quote {
		blockquote {
			margin: 0.5em 0;
			font-style: italic;
			text-align: center;
		}
	}

	.info {
		display: flex;
		justify-content: space-between;

		@container (width <= 460px) {
			flex-direction: column;
		}
	}

	.info-column {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.albums {
		display: flex;
		flex-direction: column;
		gap: 1em;
		align-items: end;

		margin-block-start: 1.5em;

		h2 {
			margin: 0;
			text-align: right;
			text-transform: lowercase;
		}
	}

	.blog-preview {
		align-self: end;
	}

	.webrings {
		margin-block-start: 2rem;
	}
</style>

---
import 'sanitize.css';

interface Props {
	title?: string;
}

const { title = 'meow' } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<slot name="head" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

---
import 'sanitize.css';

interface Props {
	title?: string;
}

const { title = 'meow' } = Astro.props;
const description =
	'find her find her find her find her find her find her find her find her';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<meta property="og:title" content={title} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://mocha8686.neocities.org/" />
		<meta
			property="og:image"
			content="https://mocha8686.neocities.org/mizuki.jpg"
		/>
		<meta property="og:description" content={description} />

		<slot name="head" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
